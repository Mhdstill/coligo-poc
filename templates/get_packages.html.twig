{% extends 'base.html.twig' %}

{% block links %}
    <link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}

{% block body %}

    <div class="container py-3">
        <table class="table table-striped table-hover shadow-2-strong bg-white">
            <thead>
            <tr>
                <td>ID</td>
                <td>Propriétaire</td>
                <td>Adresse</td>
                <td>Complément</td>
                <td>Code postal</td>
                <td>Ville</td>
                <td>Emplacement</td>
                <td>Détails</td>
                <td>Indications</td>
            </tr>
            </thead>
            <tbody>
            {% for package in packages %}
                <tr>
                    <td>{{ package.id }}</td>
                    <td> {{ package.id }}</td>
                    <td>{{ package.address }}</td>
                    <td>{{ package.complement }}</td>
                    <td>{{ package.zip }}</td>
                    <td>{{ package.city }}</td>
                    <td>{{ package.emplacement }}</td>
                    <td>{{ package.details }}</td>
                    <td>{% for indication in package.indications %} {{ indication.label }}, {% endfor %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}